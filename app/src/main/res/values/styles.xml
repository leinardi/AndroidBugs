<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_red_500</item>
        <item name="colorAccent">@color/md_lime_500</item>
        <item name="colorControlHighlight">@color/md_purple_500</item>
        <item name="colorButtonNormal">@color/md_red_500</item>
        <item name="android:textColorPrimary">@color/md_blue_500</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00f</item>
        <item name="colorPrimaryDark">@color/md_lime_500</item>
        <item name="colorAccent">#0ff</item>
        <item name="colorControlHighlight">@color/md_purple_500</item>
        <item name="colorButtonNormal">@color/md_blue_500</item>
        <item name="android:textColorPrimary">#f00</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
